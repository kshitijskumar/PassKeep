<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".activities.EnterAuthKey">

    <Button
        android:id="@+id/enterBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_buttons"
        android:padding="8dp"
        android:text="@string/enter"
        android:textColor="#ffab91"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/authKeyView"
        app:layout_constraintStart_toStartOf="@+id/authKeyView"
        app:layout_constraintTop_toBottomOf="@+id/authKeyView" />

    <EditText
        android:id="@+id/authKeyView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints="Authorization Key"
        android:ems="10"
        android:hint="@string/authentication_key"
        android:inputType="numberPassword"
        android:singleLine="true"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="101dp" />

</androidx.constraintlayout.widget.ConstraintLayout>